<%- include('../partials/header') %>

    <header class="checkout-header mt-3 mb-4">
        <a style="text-decoration: none; color: royalblue;" href="/">
            <h4>Market Nest</h4>
        </a>
    </header>
    <div class="container bg-light mb-4" style="padding: 20px;">
        <h4 class="mb-4" style="text-align: center;">Reset Password</h4>
        <div class="row">
            <p>Enter the email address associated with your Market Nest account</p>

            <% if(error===false){%>

                <%}else{%>

              
                        <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert" role="alert">
                            <%=error%>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                     

                            <%}%>
                                <form action="/reset/usr/password" method="post">

                                    <div class="form-floating mb-3">
                                        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
                                        <label for="floatingInput">Email address</label>
                                    </div>
                                    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                    <button type="submit" class="btn btn-warning">Reset Password</button>
                                </form>

        </div>

    </div>

    <%- include('../partials/footer') %>