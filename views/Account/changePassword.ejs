    <div class="container mb-5 mt-4">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                <!-- nav for large screens -->
                <div class="sidebar-large">
                    <div class="d-flex flex-column flex-shrink-0 p-3 bg-light">
                        <h5 style="text-align:center">My Nest</h5>
                        <hr>
                        <ul class="nav nav-pills flex-column mb-auto">
                            <li class="nav-item">
                                <a href="/usr/account" class="nav-link " aria-current="page"><i class="fas fa-receipt"></i> Account Overview
                                </a>
                            </li>
                            <li>
                                <a href="/account/address-book" class="nav-link link-dark ">
                                    <i class="fas fa-address-card"></i> Address Book
                                </a>
                            </li>
                            <li>
                                <a href="/customer/orders" class="nav-link link-dark "><i class="fas fa-table"></i> Orders
                                </a>
                            </li>
                            <li>
                                <a href="/customer/wishlist" class=" nav-link link-dark"><i class="bi bi-heart-fill"></i> Saved Items
                                </a>
                            </li>
                        </ul>
                        <hr>
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user-circle"></i> Account
                            </a>
                            <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser3">

                                <li>
                                    <a class="active dropdown-item" href="/update/password"> <i class="bi bi-key-fill"></i></i> Change Password</a>
                                </li>
                                <li><a class="dropdown-item" href="/account/details"><i class="fas fa-user-circle"></i> Profile</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Log Out</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Side bar for smaller screens -->
                <div class="sidebar-small">
                    <div class="d-flex flex-column flex-shrink-0 bg-light">
                        <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
                            <li class="nav-item">
                                <a href="/usr/account" class="nav-link  py-3 border-bottom" aria-current="page" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Account Review">
                                    <i class="fas fa-receipt"></i>
                                </a>
                            </li>
                            <li>
                                <a href="/account/address-book" class="nav-link py-3 border-bottom " title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Address"><i class="fas fa-address-card"></i>
                                </a>
                            </li>
                            <li>
                                <a href="/customer/orders" class=" nav-link py-3 border-bottom" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Orders">
                                    <i class="fas fa-table"></i>
                                </a>
                            </li>
                            <li>
                                <a href="/customer/wishlist" class=" nav-link py-3 border-bottom" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Saved Items"><i class="bi bi-heart-fill"></i>
                                </a>
                            </li>

                        </ul>
                        <div class="dropdown border-top">
                            <a href="#" class="d-flex align-items-center justify-content-center p-3 link-dark text-decoration-none dropdown-toggle" id="dropdownUser3" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle"></i>
                            </a>
                            <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser3">

                                <li>
                                    <a class="active dropdown-item" href="/update/password"> <i class="bi bi-key-fill"></i> Change Password</a>
                                </li>
                                <li><a class="dropdown-item" href="/account/details"><i class="fas fa-user-circle"></i> Profile</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Log Out</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                <div class='mainDiv'>
                    <div class="cardStyle">
                        <%if(notify!==undefined){%>
                            <%if(notify === 'Current Password does not match'){%>
                                <div class="alert alert-danger"><%=notify%></div>
                            <%}else{%>
                                <div class="alert alert-success"><%=notify%></div>
                            <%}%>
                            
                            <%}%>
                        <%if(message!==undefined){%>
                            <% message.map(error=>{%>

                                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert" role="alert">
                                    <%- error.msg %>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                                <%})%>
                            <%}%>
                                
                           
                                            <form action="/update/password" method="post" name="signupForm" id="signupForm">
                                                <h2 class="formTitle mb-4">
                                                    Change Password
                                                </h2>

                                                <div class="inputDiv">
                                                    <div class="form-floating mb-4">
                                                        <input type="password" class="form-control" id="currentPassword" placeholder="Current Password" required name="currentPassword">
                                                        <label for="currentPassword">Current Password</label>
                                                    </div>
                                                </div>


                                                <div class="inputDiv">
                                                    <div class="form-floating mb-1">
                                                        <input type="password" class="form-control" id="newPassword" placeholder="New Password" required name="newPassword">
                                                        <label for="newPassword">New Password</label>
                                                    </div>

                                                </div>

                                                <div class="buttonWrapper">
                                                    <button type="submit" id="submitButton" class="submitButton btn-primary btn">
        <span>Continue</span>
        
      </button>
                                                </div>
                                                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                            </form>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <%- include('../partials/footer') %>